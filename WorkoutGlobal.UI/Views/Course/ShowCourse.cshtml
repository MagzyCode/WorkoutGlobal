@model List<VideoViewModel>

<div id=showCourse>
    @{
        for(int i = 0; i < Model.Count(); i++)
        {
            <div>
                <div>
                    <iframe class="showVideo-iframe" src="@Model[i].Link"></iframe>
                </div>
                <div class="video-list-background">
                    @{
                        var counter = i + 1;
                    }
                    <p class="showVideo-p-title">@counter. @Model[i].Title</p>
                    <p class="showVideo-p-description">@Model[i].Description</p>

                </div>
            </div>
        }
    }
</div>